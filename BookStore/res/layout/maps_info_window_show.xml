<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_info_bubble" >

    <ImageView
        android:id="@+id/ivAgentImage"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_person_24" />

    <TextView
        android:id="@+id/tvAgentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivAgentImage"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUserType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAgentName"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="#00F"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserType"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="#000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvLastUpdateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocationName"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="#000"
        android:textSize="12sp" />

</RelativeLayout>