<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Application_Background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/ivAgentImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_person" />
        
        <TextView
            android:id="@+id/tvDonationID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/ivAgentImage"           
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="25sp"/>
        
        <TextView
            android:id="@+id/tvDonationStatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDonationID"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/ivAgentImage"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvAgentName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDonationID"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/ivAgentImage"           
            android:text=""
            android:textStyle="normal"
            android:textColor="@color/text_color"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvDonationAmount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAgentName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ivAgentImage"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvDonationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvDonationAmount"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ivAgentImage"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:textStyle="italic" />

    </RelativeLayout>

</LinearLayout>