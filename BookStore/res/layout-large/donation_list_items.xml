<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.Example"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/ivAgentImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_person" />

        <ProgressBar
            android:id="@+id/pbImagePreLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:visibility="gone" />
        
        <TextView
            android:id="@+id/tvDonationID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/ivAgentImage"           
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="18sp"/>
        
        <TextView
            android:id="@+id/tvDonationStatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDonationID"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/ivAgentImage"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvAgentName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/tvDonationStatus"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/ivAgentImage"           
            android:text=""
            android:textStyle="normal"
            android:textColor="@color/text_color"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvDonationAmount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAgentName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ivAgentImage"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvDonationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvDonationAmount"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ivAgentImage"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:textStyle="italic" />

    </RelativeLayout>

</LinearLayout>