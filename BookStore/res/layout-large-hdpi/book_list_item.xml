<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Application_Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/ivBookImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_add_book" />

        <TextView
            android:id="@+id/tvBookName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/ivBookImage"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWriterName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBookName"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ivBookImage"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="22sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvNumberOfBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvWriterName"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ivBookImage"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="22sp"
            android:textStyle="italic" />
    </RelativeLayout>

</LinearLayout>